@model BEArcus.WebApp.Models.DocumentDBCredentialsViewModel

@{
    Layout = "~/Views/Shared/_LayoutMonitor.Mobile.cshtml";
}
@{
    ViewBag.Title = "DocumentDB Credentials";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<div class=" ui-mini">
    <div class="panel panel-default">
        <div class="panel-body">
            <section id="loginForm">
                @using (Html.BeginForm("DocumentDBCredentials", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Enter your CosmosDB Credentials.</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group" style="padding-left:20px; padding-right:20px">
                        @Html.LabelFor(m => m.EndPointUrl, new { @class = "control-label" })
                        <div>
                            @Html.TextBoxFor(m => m.EndPointUrl, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group" style="padding-left:20px ;padding-right:20px">
                        @Html.LabelFor(m => m.AuthorizationKey, new { @class = " control-label" })
                        <div>
                            @Html.TextBoxFor(m => m.AuthorizationKey, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div style="padding-left:20px">
                            <a href="https://azure.microsoft.com/en-in/documentation/articles/documentdb-create-account/">How to create a CosmosDB Account.</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <div style="padding-left:20px">
                            <a href="https://azure.microsoft.com/en-in/documentation/articles/documentdb-introduction/">What is CosmosDB ?</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <div style="padding-left:20px">
                            <a href='@Url.Action("DocumentDBDetails", "Account")'>Why Create CosmosDB Account ?</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="ui-grid-a" data-position="fixed">
                            <div class="ui-block-a">
                                <input style="margin-left:20px;" type="submit" value="Save" class="ui-btn ui-shadow ui-corner-all ui-mini" />
                            </div>
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
