@using BEArcus.WebApp.Models
@model DocumentDBCredentialsViewModel
@{
    ViewBag.Title = "DocumentDB Credentials";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<div style="background-image: url(../../Images/Arcus.jpg);  background-position: center;  background-size:100% 100%; height:100vh; width:100vw; background-repeat: no-repeat; padding-top:100px;" class="row">
    <div class="col-md-offset-7 col-md-4">
        <div class="panel panel-default">
            <div class="panel-body">
                <div>
                    <section id="loginForm">
                        @using (Html.BeginForm("DocumentDBCredentials", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <h4>Enter your CosmosDB Credentials.</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.EndPointUrl, new { @class = "col-md-3 control-label" })
                                <div class="col-md-offset-4">
                                    @Html.TextBoxFor(m => m.EndPointUrl, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.AuthorizationKey, new { @class = "col-md-3 control-label" })
                                <div class="col-md-offset-4">
                                    @Html.TextBoxFor(m => m.AuthorizationKey, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-4">
                                    <a href="https://azure.microsoft.com/en-in/documentation/articles/documentdb-create-account/">How to create a CosmosDB Account.</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-4">
                                    <a href="https://azure.microsoft.com/en-in/documentation/articles/documentdb-introduction/">What is CosmosDB ?</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-4">
                                    <a href="/Account/DocumentDBDetails">Why Create CosmosDB Account ?</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-9 col-md-2 ">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
